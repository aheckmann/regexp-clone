{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ES2024"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.js"
  ],
  "exclude": [
    "test/**/*",
    "node_modules"
  ]
}
